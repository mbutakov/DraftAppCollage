<Page x:Class="DraftApp.pages.MaterialListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DraftApp.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MaterialListPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="1.3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.35*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Height="53" Margin="10,0,10,0"/>
        <ComboBox VerticalAlignment="Center" Height="53" Grid.Column="1" Margin="10,0,10,0"/>
        <ComboBox VerticalAlignment="Center" Height="53" Grid.Column="2" Margin="10,0,10,0"/>
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="3">
            <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Name="StackPanelMaterial">

            </StackPanel>
        </ScrollViewer>
    


    </Grid>
</Page>
